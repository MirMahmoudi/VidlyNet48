@model IEnumerable<VidlyNet48.Presentation.Models.Customer>

@{
	ViewBag.Title = "Customers";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model is null || !Model.Any())
{
	<p>We have no customer yet.</p>
}
else
{
	<table class="table table-bordered table-hover">
		<thead>
		<tr>
			<th>Customers</th>
		</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model)
			{
				<tr>
					<td>
						@Html.ActionLink(
							customer.Name,
							$"Details",
							"Customers",
							new { id = customer.Id },
							null)
					</td>
				</tr>
			}
		</tbody>
	</table>
}