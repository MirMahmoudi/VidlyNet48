@model VidlyNet48.Presentation.ViewModels.MovieFormViewModel

@{
	ViewBag.Title = Model.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies", FormMethod.Post))
{
	<div class="form-group mt-4">
		@Html.LabelFor(m => m.Movie.Name)
		@Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
	</div>
	<div class="form-group mt-4">
		@Html.LabelFor(m => m.Movie.ReleaseDate)
		@Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
	</div>
	<div class="form-group mt-4">
		@Html.LabelFor(m => m.Movie.GenreId)
		@Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Genre", new { @class = "form-control" })
	</div>
	<div class="form-group mt-4">
		@Html.LabelFor(m => m.Movie.NumberInStuck)
		@Html.TextBoxFor(m => m.Movie.NumberInStuck, new { @class = "form-control" })
	</div>
	@Html.HiddenFor(m => m.Movie.Id)
	<button type="submit" class="btn btn-primary mt-4">Save</button>
}	